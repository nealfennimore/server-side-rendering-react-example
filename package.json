{
  "name": "webpack-build-tools",
  "version": "0.0.1",
  "description": "Personal build tools",
  "main": "index.js",
  "scripts": {
    "createBuildVersion": "./scripts/buildVersion.sh",
    "copyFavicon": "./scripts/copyFavicon.sh",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node ./server/build/production.server.bundle.js",
    "prebuild": "npm install && npm run createBuildVersion && npm run copyFavicon",
    "build": "npm run buildClient && npm run buildServer",
    "buildClient": "webpack --config ./webpack/webpack.client.config.babel.js --progress",
    "buildServer": "webpack --config ./webpack/webpack.server.config.babel.js --progress",
    "prestartWebpackDevServerWatcher": "npm run createBuildVersion",
    "startWebpackDevServerWatcher": "webpack --config ./webpack/webpack.server.development.config.babel.js -d --progress --watch",
    "predevelop": "npm run startWebpackDevServerWatcher &",
    "develop": "concurrently --kill-others \"NODE_ENV=development NODE_TLS_REJECT_UNAUTHORIZED=0 nodemon --watch ./server/build --exec babel-node ./server/build/development.server.bundle.js\" \"NODE_ENV=development babel-node ./server/development.server.watch.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nealfennimore/webpack-build-tools.git"
  },
  "author": "Neal Fennimore",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nealfennimore/webpack-build-tools/issues"
  },
  "homepage": "https://github.com/nealfennimore/webpack-build-tools#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel": "^6.5.2",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.5.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.4.0",
    "eslint-config-nfen": "0.0.9",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^2.0.0",
    "jimp": "^0.2.27",
    "json-loader": "^0.5.4",
    "modularscale-sass": "^2.1.1",
    "node-sass": "^3.7.0",
    "path": "^0.12.7",
    "postcss": "^5.0.21",
    "postcss-loader": "^0.11.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "redux-immutable-state-invariant": "^1.2.4",
    "resolve-url-loader": "^1.4.3",
    "responsive-loader": "https://github.com/nealfennimore/responsive-loader.git",
    "sass-loader": "^4.0.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "express": "^4.14.0",
    "forever": "^0.15.2",
    "foundation-sites": "^6.2.4",
    "highlight.js": "^9.9.0",
    "lodash": "^4.15.0",
    "moment": "https://registry.npmjs.org/moment/-/moment-2.15.2.tgz",
    "path": "https://registry.npmjs.org/path/-/path-0.12.7.tgz",
    "react": "^15.1.0",
    "react-disqus-thread": "^0.4.0",
    "react-dom": "^15.1.0",
    "react-ga": "^2.1.2",
    "react-redux": "^4.4.5",
    "react-router": "https://registry.npmjs.org/react-router/-/react-router-3.0.0.tgz",
    "react-router-redux": "https://registry.npmjs.org/react-router-redux/-/react-router-redux-4.0.7.tgz",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "serialize-javascript": "^1.3.0",
    "superagent": "^3.0.0"
  }
}
